{
  "name": "betting-scraper",
  "version": "0.0.1",
  "description": "Web Scraper for betting lines",
  "scripts": {
    "test": "test",
    "build": "npm run clean; tsc -p tsconfig.build.json;",
    "build:watch": "npm run clean; tsc -p tsconfig.build.json --watch --preserveWatchOutput --pretty",
    "clean": "rimraf dist",
    "docker:dev": "docker-compose up",
    "docker:dev:build": "docker-compose up --build",
    "docker:connect": "docker-compose exec app /bin/bash",
    "db:connect": "docker-compose exec postgres psql -d betting_scraper_db -U superuser",
    "db:migrate": "knex migrate:latest --knexfile src/db/index.ts",
    "db:migrate:make": "knex migrate:make --knexfile src/db/index.ts -x ts",
    "db:reset": "if [ \"$NODE_ENV\" != \"production\" ]; then dropdb betting_scraper_db; npm run db:setup && npm run db:migrate; fi",
    "db:rollback": "knex migrate:rollback --knexfile src/db/index.ts",
    "db:setup": "if [ \"$NODE_ENV\" != \"production\" ]; then createdb -O superuser betting_scraper_db; fi",
    "db:setup:user": "if [ \"$NODE_ENV\" != \"production\" ]; then createuser superuser; fi",
    "db:seed:test": "NODE_ENV=test npm run db:seed",
    "db:reset:test": "NODE_ENV=test npm run db:reset",
    "db:setup:test": "NODE_ENV=test npm run db:setup",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node dist/index.js",
    "start:dev": "nodemon src/index.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "prettier": {
    "singleQuote": true
  },
  "nodemonConfig": {
    "delay": 1500
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SishaarGamblr/Betting-Scraper.git"
  },
  "author": "@SishaarRao",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SishaarGamblr/Betting-Scraper/issues"
  },
  "homepage": "https://github.com/SishaarGamblr/Betting-Scraper#readme",
  "devDependencies": {
    "@prisma/client": "^4.7.1",
    "@tsconfig/node18": "^1.0.1",
    "@types/config": "^0.0.41",
    "@types/node": "^18.6.1",
    "@types/selenium-webdriver": "^4.1.2",
    "fastify-tsconfig": "^1.0.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "config": "^3.3.7",
    "dotenv": "^16.0.1",
    "fastify": "^4.10.2",
    "knex": "^2.2.0",
    "moment": "^2.29.4",
    "pg": "^8.7.3",
    "prisma": "^4.7.1",
    "selenium-webdriver": "^4.7.1"
  }
}
